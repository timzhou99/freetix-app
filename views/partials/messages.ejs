<% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(err) { %>

        <div class="alert">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <%= err.msg %>
        </div>

    <% }); %>
<% } %>

<% if(success_msg != '') { %>

    <div class="alert_success">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <%= success_msg %>
    </div>

<% } %>

<% if(error_msg != '') { %>

    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <%= error_msg %>
    </div>

<% } %>

<% if(error != '') { %>

    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <%= error %>
    </div>

<% } %>


