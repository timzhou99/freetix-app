<h1>Login to an Account</h1>

<div class="auth">
    <form method="POST" action="/users/login">

        <%- include('partials/messages'); %>

        <label for="email">Email</label>
        <span><input type="text" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>"></span>

        <label for="password">Password</label>
        <span><input type="password" id="password" name="password"></span>

        <input type="button" value="Register" style="float: right" onclick="window.location='/users/register';">
        <input type="submit" value="Login" style="float: right">

    </form>
</div>