<h1>Event Details</h1> <br>

<% if (typeof eventObj == 'undefined') { %>
    <h3 style="text-align: center">Event does not exist.</h3>
<% } else { %>

    <div class="row">
        <div class="column left fill" style="height: 450px; border-top-left-radius: 25px;">
            <img src="<%= eventObj.eventPicture %>" alt="" />
        </div>
        <div class="column right" style="background-color: #2c2c32; height: 450px; border-top-right-radius: 25px; position: relative">
            <p><%= formatDateTime(eventObj.eventStart) %></p>
            <br>
            <h3 style="font-weight: bold; margin:0; padding:0;"><%= eventObj.eventName %></h3>
            <h4>by <%= manager %></h4>
            <span><p>Ticket Price: $<%= eventObj.ticketPrice %></p></span>
        </div>
    </div>
    <div class="row">
        <div class="column left" style="height: 80px; background-color: #2c2c32;">
        </div>
        <div class="column right" style="height: 80px; background-color: #2c2c32; padding-right:20px;">
            <form method="POST" action="/events/<%= eventObj._id %>/purchase">
                <input type="submit" value="Purchase Ticket" style="float: right;">
            </form>
        </div>
    </div>
    <div class="row">
        <div class="column left" style="background-color: #2c2c32; height:300px;">
            <h3 style="margin:0; padding:0; line-height:0;">About this Event</h3> <br> <br>
            <p><%= eventObj.eventDescription %></p>
        </div>
        <div class="column right" style="background-color: #2c2c32; height:300px;">
            <h3 style="margin:0; padding:0; line-height:0;">Date and Time</h3> <br> <br>
            <p style="margin:0; padding:0; line-height:0;">Start Time | <%= formatDateTime(eventObj.eventStart) %></p> <br>
            <p style="margin:0; padding:0; line-height:0;">End Time | <%= formatDateTime(eventObj.eventEnd) %></p>

            <br> <br>

            <h3 style="margin:0; padding:0; line-height:0;">Refund Policy</h3> <br> <br>
            <p style="margin:0; padding:0; line-height:0;">Contact the organizer to request a refund.</p> <br>
        </div>
    </div>


<% } %>